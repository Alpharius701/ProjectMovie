@{
    ViewData["Title"] = "Disable two-factor authentication (2FA)";
}

<partial name="_StatusMessage" view-data="ViewData" />

<div class="alert alert-warning" role="alert">
    <p>
        <strong>This action only disables 2FA.</strong>
    </p>
    <p>
        Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a href="@Url.Action("ResetAuthenticator", "Manage")">reset your authenticator keys.</a>
    </p>
</div>

<div>
    <form asp-controller="Manage" asp-action="Disable2fa" method="post">
        <button class="btn btn-danger" type="submit">Disable 2FA</button>
    </form>
</div>
