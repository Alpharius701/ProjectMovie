@{
    ViewData["Title"] = "Register confirmation";
}

<h1>@ViewData["Title"]</h1>
<p>
    Please check your email to confirm your account.
    If you haven't received an email, please wait 5 minutes.
    If you still haven't received an email, click the button:
</p>
<a id="resend-confirmation" href="@Url.Action("ResendEmailConfirmation", "Account")" class="btn btn-primary">Resend email confirmation</a>
